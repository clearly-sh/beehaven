{
  "name": "@clearly/beehaven",
  "version": "0.1.0",
  "description": "Visualize Claude Code activity as an animated bee office",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "beehaven": "dist/cli.js"
  },
  "files": [
    "dist/",
    "public/",
    "hooks/"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "setup": "node dist/cli.js setup",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "claude",
    "claude-code",
    "visualization",
    "developer-tools",
    "ai",
    "beehaven"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clearly-sh/beehaven"
  },
  "homepage": "https://github.com/clearly-sh/beehaven#readme",
  "dependencies": {
    "chokidar": "^4.0.0",
    "express": "^4.21.0",
    "open": "^10.2.0",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "@elevenlabs/elevenlabs-js": "^2.34.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
